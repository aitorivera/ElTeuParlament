<resources>

    <!-- Base application theme. Versions >= API 11 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- Action Bar -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>


    <!-- Custom Styles -->

    <style name="Medium_Blue" parent="android:TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- Action Bar -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar" >

        <item name="android:displayOptions">showHome</item>
        <item name="android:background">@drawable/actionbar_background_color</item>
        <item name="android:height">30dp</item>


    </style>
    <!-- End Action Bar -->

</resources>
